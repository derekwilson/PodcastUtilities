<podcasts version="1.0">
	<global>
		<sourceRoot>.\downloads</sourceRoot>
		<destinationRoot>W:\Podcasts</destinationRoot>
		<playlistFilename>podcasts.wpl</playlistFilename>
		<playlistFormat>wpl</playlistFormat>
		<freeSpaceToLeaveOnDestinationMB>2000</freeSpaceToLeaveOnDestinationMB>
    <freeSpaceToLeaveOnDownloadMB>3000</freeSpaceToLeaveOnDownloadMB>
		<sortfield>name</sortfield>
		<sortdirection>asc</sortdirection>
    <maximumNumberOfConcurrentDownloads>20</maximumNumberOfConcurrentDownloads>
    <retryWaitInSeconds>10</retryWaitInSeconds>
    <feed>
        <maximumDaysOld>31</maximumDaysOld>
        <format>rss</format>
        <downloadStrategy>high_tide</downloadStrategy>
        <namingStyle>pubdate_url</namingStyle>
    </feed>
    <diagnostics>
      <retainTempFiles>false</retainTempFiles>
      <outputLevel>none</outputLevel>
    </diagnostics>
    <postdownloadcommand>
      <command>{exefolder}\mp3gain.exe</command>
      <arguments>/c /q /g 5 "{downloadfullpath}"</arguments>
      <workingdirectory></workingdirectory>
    </postdownloadcommand>
	</global>
	<podcast>
    <feed>
        <url>http://downloads.bbc.co.uk/rmhttp/downloadtrial/fivelive/markkermodesfilmreviews/rss.xml</url>
        <deleteDownloadsDaysOld>31</deleteDownloadsDaysOld>
    </feed>
		<folder>Mark Kermode and Simon Mayos Film Reviews</folder>
		<pattern>*.mp3</pattern>
		<number>3</number>
    <postdownloadcommand>
    </postdownloadcommand>
	</podcast>
	<podcast>
    <feed>
        <url>http://www.hanselminutes.com/hanselminutes_MP3Direct.xml</url>
    </feed>
		<folder>Hanselminutes</folder>
		<pattern>*.mp3</pattern>
		<number>-1</number>
	</podcast>
</podcasts>