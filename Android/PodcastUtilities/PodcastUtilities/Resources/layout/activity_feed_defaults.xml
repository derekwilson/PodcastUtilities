<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/feed_defaults_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/download_strategy_row_label_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				style="@style/ConfigRowContainer"
				>

				<TextView
					android:id="@+id/download_strategy_row_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/row_title_download_strategy"
					style="@style/ItemListTitle"
					/>

				<TextView
					android:id="@+id/download_strategy_row_sub_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/placeholder"
					style="@style/ItemListSubTitle2"
					/>

			</androidx.appcompat.widget.LinearLayoutCompat>

			<View style="@style/Divider"/>

			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/naming_style_row_label_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				style="@style/ConfigRowContainer"
				>

				<TextView
					android:id="@+id/naming_style_row_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/row_title_naming_style"
					style="@style/ItemListTitle"
					/>

				<TextView
					android:id="@+id/naming_style_row_sub_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/placeholder"
					style="@style/ItemListSubTitle2"
					/>

			</androidx.appcompat.widget.LinearLayoutCompat>

			<View style="@style/Divider"/>

			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/max_days_old_row_label_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				style="@style/ConfigRowContainer"
				>

				<TextView
					android:id="@+id/max_days_old_row_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/row_title_max_days_old"
					style="@style/ItemListTitle"
					/>

				<TextView
					android:id="@+id/max_days_old_row_sub_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/placeholder"
					style="@style/ItemListSubTitle2"
					/>

			</androidx.appcompat.widget.LinearLayoutCompat>

			<View style="@style/Divider"/>

			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/delete_download_days_old_row_label_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				style="@style/ConfigRowContainer"
				>

				<TextView
					android:id="@+id/delete_download_days_old_row_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/row_title_delete_days_old"
					style="@style/ItemListTitle"
					/>

				<TextView
					android:id="@+id/delete_download_days_old_row_sub_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/placeholder"
					style="@style/ItemListSubTitle2"
					/>

			</androidx.appcompat.widget.LinearLayoutCompat>

			<View style="@style/Divider"/>

			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/max_download_items_row_label_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				style="@style/ConfigRowContainer"
				>

				<TextView
					android:id="@+id/max_download_items_row_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/row_title_max_download_items"
					style="@style/ItemListTitle"
					/>

				<TextView
					android:id="@+id/max_download_items_row_sub_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/placeholder"
					style="@style/ItemListSubTitle2"
					/>

			</androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>