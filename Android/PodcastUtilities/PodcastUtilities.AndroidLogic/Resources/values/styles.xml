
<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
	</style>


	<style name="ItemTitle">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/data_title</item>
	</style>

	<style name="ItemLabel">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/data_label</item>
	</style>

	<style name="ItemValue">
		<item name="android:textSize">32sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/data_value</item>
	</style>

	<style name="ItemValueSmall">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/data_value</item>
	</style>

	<style name="ItemProgressBar" parent="@style/AppTheme">
		<item name="colorAccent">@color/data_progress</item>
	</style>

	<style name="ItemListSubTitle2">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="ItemListSubTitle">
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="ItemListTitle" parent="ItemListSubTitle">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>

