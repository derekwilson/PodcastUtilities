
<resources>

	<style name="ItemTitle">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/data_title</item>
	</style>

	<style name="ItemLabel">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/data_label</item>
	</style>

	<style name="ItemValue">
		<item name="android:textSize">32sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/data_value</item>
	</style>

	<style name="ItemValueSmall">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/data_value</item>
	</style>

	<style name="ItemListSubTitle">
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="ItemListTitle" parent="ItemListSubTitle">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>

