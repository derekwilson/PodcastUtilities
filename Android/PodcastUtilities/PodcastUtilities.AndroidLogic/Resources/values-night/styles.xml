<resources>
	<!-- Dark Mode -->

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/colour_blue</item>
		<item name="colorPrimaryDark">@color/colour_dark_blue</item>
		<item name="colorAccent">@color/colour_green</item>

		<!-- set the action bar colour to be colorPrimary  -->
		<item name="actionBarStyle">@style/AppTheme.ActionBar</item>
	</style>

	<style name="ItemLabel">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/colour_green</item>
	</style>

	<style name="ItemValue">
		<item name="android:textSize">32sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/color_grey</item>
	</style>

	<style name="ItemValueSmall">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/color_grey</item>
	</style>

	<style name="fabIconButton">
		<item name="backgroundTint">@color/colour_green</item>
	</style>

</resources>

